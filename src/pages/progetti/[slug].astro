---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations } from '../../i18n';

export async function getStaticPaths() {
  const projects = await getCollection('projects', ({ id }) => {
    return id.startsWith('it/');
  });

  return projects.map((project) => ({
    params: { slug: project.id.replace('it/', '').replace('.md', '') },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

const locale = 'it';
const content = getTranslations(locale);
---

<BaseLayout content={content} locale={locale} title={`${project.data.title} - ${content.site_title}`}>
  <!-- Project Hero -->
  <section class="relative h-[60vh] overflow-hidden">
    <Image
      src={project.data.coverImage}
      alt={project.data.title}
      class="w-full h-full object-cover"
      widths={[800, 1200, 1600]}
      sizes="100vw"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12 text-white">
      <div class="max-w-7xl mx-auto">
        <div class="inline-block bg-[#8BC34A] text-white px-4 py-2 rounded-full text-sm font-semibold mb-4 capitalize">
          {project.data.category}
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-4">{project.data.title}</h1>
        <div class="flex items-center text-lg md:text-xl text-gray-200">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          <span>{project.data.location}</span>
          <span class="mx-4">•</span>
          <span>{project.data.year}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Content -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Link -->
      <a href="/progetti" class="inline-flex items-center text-[#8BC34A] hover:text-[#689F38] font-semibold mb-8 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna ai Progetti
      </a>

      <!-- Description -->
      <div class="prose prose-lg max-w-none mb-12">
        <p class="text-xl text-gray-700 leading-relaxed">{project.data.description}</p>
      </div>

      <!-- Specs -->
      {project.data.specs && (
        <div class="bg-gray-50 rounded-lg p-8 mb-12">
          <h2 class="text-2xl font-bold mb-6">Dettagli Tecnici</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {project.data.specs.area && (
              <div>
                <div class="text-sm text-gray-600 font-semibold mb-1">{content.projects.specs_area}</div>
                <div class="text-lg font-bold text-gray-900">{project.data.specs.area}</div>
              </div>
            )}
            {project.data.specs.budget && (
              <div>
                <div class="text-sm text-gray-600 font-semibold mb-1">{content.projects.specs_budget}</div>
                <div class="text-lg font-bold text-gray-900">{project.data.specs.budget}</div>
              </div>
            )}
            {project.data.specs.duration && (
              <div>
                <div class="text-sm text-gray-600 font-semibold mb-1">{content.projects.specs_duration}</div>
                <div class="text-lg font-bold text-gray-900">{project.data.specs.duration}</div>
              </div>
            )}
            {project.data.specs.client && (
              <div>
                <div class="text-sm text-gray-600 font-semibold mb-1">{content.projects.specs_client}</div>
                <div class="text-lg font-bold text-gray-900">{project.data.specs.client}</div>
              </div>
            )}
          </div>
          {project.data.specs.features && project.data.specs.features.length > 0 && (
            <div class="mt-6">
              <div class="text-sm text-gray-600 font-semibold mb-3">{content.projects.specs_features}</div>
              <ul class="space-y-2">
                {project.data.specs.features.map((feature: string) => (
                  <li class="flex items-start">
                    <span class="text-[#8BC34A] mr-3 text-xl">•</span>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      )}

      <!-- Markdown Content -->
      <div class="prose prose-lg max-w-none mb-12">
        <Content />
      </div>

      <!-- Gallery -->
      {project.data.gallery && project.data.gallery.length > 0 && (
        <div class="mt-12">
          <h2 class="text-2xl font-bold mb-6">Galleria</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {project.data.gallery.map((image) => (
              <div class="relative h-64 rounded-lg overflow-hidden shadow-lg">
                <Image
                  src={image}
                  alt={project.data.title}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  widths={[400, 600, 800]}
                  sizes="(max-width: 768px) 100vw, 50vw"
                />
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
