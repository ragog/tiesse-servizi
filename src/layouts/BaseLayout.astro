---
import '../styles/global.css';

interface Props {
  content: any;
  locale: 'it' | 'en';
  title?: string;
}

const { content, locale, title } = Astro.props;
const otherLocale = locale === 'it' ? 'en' : 'it';

// Smart language switcher - preserve page type
const currentPath = Astro.url.pathname;
const isProjectsPage = currentPath.includes('/progetti') || currentPath.includes('/projects');
const isHome = currentPath === '/' || currentPath === '/en';

let otherLocaleUrl = '/';
if (isProjectsPage) {
  otherLocaleUrl = locale === 'it' ? '/en/projects' : '/progetti';
} else if (isHome) {
  otherLocaleUrl = locale === 'it' ? '/en' : '/';
}

// Helper to construct home section links
function getHomeLink(section: string) {
  const baseUrl = locale === 'it' ? '/' : '/en';
  return `${baseUrl}#${section}`;
}
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
		<title>{title || content.site_title}</title>
		<meta name="description" content={content.hero?.description || content.site_title} />
	</head>
	<body class="overflow-x-hidden">
		<!-- Navigation -->
		<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center py-3">
					<!-- Logo - now links to home -->
					<a href={locale === 'it' ? '/' : '/en'} class="flex-shrink-0">
						<div class="leading-tight">
							<div class="text-2xl font-bold">
								<span class="text-gray-900">TIESSE</span><span style="color: var(--color-primary)">SERVIZI</span>
							</div>
							<div class="text-[0.5rem] font-normal text-gray-600 tracking-[0.35em] mt-0.5">
								FACILITY â€¢ EXECUTIVE MANAGEMENT
							</div>
						</div>
					</a>

					<!-- Desktop Navigation -->
					<div class="hidden xl:flex xl:space-x-6">
						<a href={locale === 'it' ? '/' : '/en'}
						   class={`transition-colors text-sm ${isHome ? 'text-[#8BC34A] font-semibold' : 'text-gray-700 hover:text-[#8BC34A]'}`}>
							{content.nav.home}
						</a>
						<a href={getHomeLink(locale === 'it' ? 'chi-siamo' : 'about')}
						   class="text-gray-700 hover:text-[#8BC34A] transition-colors text-sm">
							{content.nav.about}
						</a>
						<a href={locale === 'it' ? '/progetti' : '/en/projects'}
						   class={`transition-colors text-sm ${isProjectsPage ? 'text-[#8BC34A] font-semibold' : 'text-gray-700 hover:text-[#8BC34A]'}`}>
							{content.nav.projects}
						</a>

						<!-- Language Switcher -->
						<a href={otherLocaleUrl}
						   class="text-gray-700 hover:text-[#8BC34A] transition-colors font-semibold text-sm flex items-center gap-1">
							<span>{otherLocale === 'it' ? 'ðŸ‡®ðŸ‡¹' : 'ðŸ‡¬ðŸ‡§'}</span>
							<span>{otherLocale.toUpperCase()}</span>
						</a>
					</div>

					<!-- Mobile Menu Button -->
					<button id="mobile-menu-button"
							class="xl:hidden flex items-center text-gray-700 hover:text-[#8BC34A] transition-colors">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								  d="M4 6h16M4 12h16M4 18h16"></path>
							<path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round"
								  stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
			</div>
		</nav>

		<!-- Mobile Menu Overlay -->
		<div id="mobile-menu"
			 class="fixed inset-0 z-40 bg-white transform translate-x-full transition-transform duration-300 ease-in-out xl:hidden">
			<div class="flex flex-col h-full pt-20 px-6 py-6">
				<a href={locale === 'it' ? '/' : '/en'}
				   class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">
					{content.nav.home}
				</a>
				<a href={getHomeLink(locale === 'it' ? 'chi-siamo' : 'about')}
				   class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">
					{content.nav.about}
				</a>
				<a href={locale === 'it' ? '/progetti' : '/en/projects'}
				   class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">
					{content.nav.projects}
				</a>

				<!-- Language Switcher -->
				<a href={otherLocaleUrl}
				   class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors font-semibold text-lg py-3 border-b border-gray-200 flex items-center gap-2">
					<span>{otherLocale === 'it' ? 'ðŸ‡®ðŸ‡¹' : 'ðŸ‡¬ðŸ‡§'}</span>
					<span>{otherLocale.toUpperCase()}</span>
				</a>
			</div>
		</div>

		<!-- Page Content -->
		<slot />

		<!-- Footer -->
		<footer class="bg-[#2E2E2E] text-white py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Multi-column grid -->
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
					<!-- Column 1: Company Branding -->
					<div class="text-center md:text-left">
						<h3 class="text-2xl md:text-3xl font-bold mb-2">
							<span class="text-white">TIESSE</span><span class="text-[#8BC34A]">SERVIZI</span>
						</h3>
						<p class="text-gray-400 text-sm">FACILITY â€¢ EXECUTIVE MANAGEMENT</p>
					</div>

					<!-- Column 2: Company Info -->
					<div class="text-center md:text-left">
						<h4 class="text-lg font-semibold mb-3">{content.footer.company_info_title}</h4>
						<div class="space-y-2 text-sm">
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.partita_iva_label}:</span><br/>
								{content.footer.partita_iva_value}
							</p>
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.sede_label}:</span><br/>
								{content.footer.sede_value}
							</p>
						</div>
					</div>

					<!-- Column 3: Contacts -->
					<div class="text-center md:text-left">
						<h4 class="text-lg font-semibold mb-3">{content.footer.contacts_title}</h4>
						<div class="space-y-2 text-sm">
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.email_label}:</span><br/>
								<a href={`mailto:${content.footer.email_value}`} class="hover:text-[#8BC34A] transition-colors">
									{content.footer.email_value}
								</a>
							</p>
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.pec_label}:</span><br/>
								<a href={`mailto:${content.footer.pec_value}`} class="hover:text-[#8BC34A] transition-colors">
									{content.footer.pec_value}
								</a>
							</p>
						</div>
					</div>
				</div>

				<!-- Copyright row -->
				<div class="border-t border-gray-700 pt-6 text-center">
					<p class="text-sm text-gray-500">
						&copy; 2024 TIESSE SERVIZI. {content.footer.copyright}
					</p>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			const menuIcon = document.getElementById('menu-icon');
			const closeIcon = document.getElementById('close-icon');
			const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

			mobileMenuButton?.addEventListener('click', () => {
				const isOpen = !mobileMenu?.classList.contains('translate-x-full');

				if (isOpen) {
					// Close menu
					mobileMenu?.classList.add('translate-x-full');
					menuIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					document.body.style.overflow = '';
				} else {
					// Open menu
					mobileMenu?.classList.remove('translate-x-full');
					menuIcon?.classList.add('hidden');
					closeIcon?.classList.remove('hidden');
					document.body.style.overflow = 'hidden';
				}
			});

			// Close mobile menu when clicking on a link
			mobileMenuLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu?.classList.add('translate-x-full');
					menuIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					document.body.style.overflow = '';
				});
			});
		</script>
	</body>
</html>
