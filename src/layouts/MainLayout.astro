						<a href={locale === 'it' ? '#sostenibilita' : '#sustainability'} class="text-gray-700 hover:text-[#8BC34A] transition-colors text-sm">{content.nav.sustainability}</a>
						<a href="#news" class="text-gray-700 hover:text-[#8BC34A] transition-colors text-sm">{content.nav.news}</a>
						<a href="#partners" class="text-gray-700 hover:text-[#8BC34A] transition-colors text-sm">{content.nav.partners}</a>
						<a href={locale === 'it' ? '#contatti' : '#contact'} class="text-gray-700 hover:text-[#8BC34A] transition-colors text-sm">{content.nav.contact}</a>
						<a href={otherLocaleUrl} class="text-gray-700 hover:text-[#8BC34A] transition-colors font-semibold text-sm flex items-center gap-1">
							<span>{otherLocale === 'it' ? 'ðŸ‡®ðŸ‡¹' : 'ðŸ‡¬ðŸ‡§'}</span>
							<span>{otherLocale.toUpperCase()}</span>
						</a>
					</div>
					<!-- Mobile Menu Button -->
					<button id="mobile-menu-button" class="xl:hidden flex items-center text-gray-700 hover:text-[#8BC34A] transition-colors">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
							<path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
			</div>
		</nav>

		<!-- Mobile Menu Overlay -->
		<div id="mobile-menu" class="fixed inset-0 z-40 bg-white transform translate-x-full transition-transform duration-300 ease-in-out xl:hidden">
			<div class="flex flex-col h-full pt-20 px-6 py-6">
				<a href={locale === 'it' ? '#chi-siamo' : '#about'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.about}</a>
				<a href={locale === 'it' ? '#missione' : '#mission'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.mission}</a>
				<a href={locale === 'it' ? '#servizi-tecnici' : '#services'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.services}</a>
				<a href={locale === 'it' ? '#invest-in-italy' : '#invest-in-italy'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.invest}</a>
				<a href={locale === 'it' ? '#garanzie' : '#guarantees'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.guarantees}</a>
				<a href={locale === 'it' ? '#sostenibilita' : '#sustainability'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.sustainability}</a>
				<a href="#news" class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.news}</a>
				<a href="#partners" class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.partners}</a>
				<a href={locale === 'it' ? '#contatti' : '#contact'} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors text-lg py-3 border-b border-gray-200">{content.nav.contact}</a>
				<a href={otherLocaleUrl} class="mobile-menu-link text-gray-700 hover:text-[#8BC34A] transition-colors font-semibold text-lg py-3 border-b border-gray-200 flex items-center gap-2">
					<span>{otherLocale === 'it' ? 'ðŸ‡®ðŸ‡¹' : 'ðŸ‡¬ðŸ‡§'}</span>
					<span>{otherLocale.toUpperCase()}</span>
				</a>
			</div>
		</div>

		<!-- Hero Section -->
		<section id="home" class="relative h-screen flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0">
				<img src="/img/signal-2025-12-04-164753_002.jpeg" alt="Luxury Villa" class="w-full h-full object-cover" />
				<div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/30"></div>
			</div>
			<div class="relative z-10 text-center text-white px-4">
				<div class="mb-8">
					<div class="inline-block bg-[#8BC34A] w-16 h-1 mb-6"></div>
				</div>
				<h1 class="text-5xl md:text-7xl font-bold mb-6">
					<span class="text-white">TIESSE</span><span class="text-[#8BC34A]">SERVIZI</span>
				</h1>
				<p class="text-xl md:text-2xl font-light mb-2">{content.hero.subtitle}</p>
				<p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto mt-8">
					{content.hero.description}
				</p>
				<a href={locale === 'it' ? '#chi-siamo' : '#about'} class="inline-block mt-12 px-8 py-4 bg-[#8BC34A] hover:bg-[#689F38] text-white font-semibold rounded transition-colors">
					{content.hero.cta_text}
				</a>
			</div>
		</section>

		<!-- Chi Siamo / About Section -->
		<section id={locale === 'it' ? 'chi-siamo' : 'about'} class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.chi_siamo.title}</h2>
						<div class="space-y-4 text-gray-700 leading-relaxed">
							{content.chi_siamo.points.map((point: string) => (
								<p class="flex items-start">
									<span class="text-[#8BC34A] mr-3 text-xl">â€¢</span>
									<span>{point}</span>
								</p>
							))}
						</div>
					</div>
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/ChatGPT Image Dec 5, 2025, 12_57_10 PM.png" alt="Luxury Property" class="w-full h-full object-cover" />
					</div>
				</div>
			</div>
		</section>

		<!-- Missione / Mission Section -->
		<section id={locale === 'it' ? 'missione' : 'mission'} class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/ChatGPT Image Dec 5, 2025, 02_02_08 PM.png" alt="Mission" class="w-full h-full object-cover" />
					</div>
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.missione.title}</h2>
						<p class="text-xl text-gray-600">{content.missione.description}</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Servizi Tecnici / Technical Services Section -->
		<section id={locale === 'it' ? 'servizi-tecnici' : 'services'} class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.servizi_tecnici.title}</h2>
						<p class="text-lg text-gray-600 mb-6">{content.servizi_tecnici.description}</p>
						<div class="grid grid-cols-2 gap-3 mb-6">
							{content.servizi_tecnici.items.map((item: string, index: number) => (
								<div class="flex items-start bg-gray-50 p-3 rounded-lg">
									<div class="w-8 h-8 rounded-full bg-[#8BC34A] flex items-center justify-center text-white font-bold text-sm mr-3 flex-shrink-0">
										{index + 1}
									</div>
									<span class="text-sm font-semibold text-gray-900 leading-tight">{item}</span>
								</div>
							))}
						</div>
						<p class="text-gray-600 italic">{content.servizi_tecnici.closing}</p>
					</div>
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/ChatGPT Image Dec 2, 2025, 10_53_11 AM.png" alt="Construction Management" class="w-full h-full object-cover" />
					</div>
				</div>
			</div>
		</section>

		<!-- Invest in Italy Section -->
		<section id="invest-in-italy" class="py-20 bg-[#2E2E2E] text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/ChatGPT Image Dec 9, 2025, 10_23_55 PM.png" alt="Italian Property" class="w-full h-full object-cover" />
					</div>
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.invest_in_italy.title}</h2>
						<p class="text-lg text-gray-300 mb-4">{content.invest_in_italy.intro}</p>
						<p class="text-gray-400 mb-6">{content.invest_in_italy.description}</p>
						<p class="text-lg font-semibold text-white mb-4">{content.invest_in_italy.subtitle}</p>
						<div class="space-y-3 text-gray-300 mb-6">
							{content.invest_in_italy.points.map((point: string) => (
								<p class="flex items-start">
									<span class="text-[#8BC34A] mr-3 text-xl">â€¢</span>
									<span>{point}</span>
								</p>
							))}
						</div>
						<p class="text-gray-400 italic">{content.invest_in_italy.closing}</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Garanzie e Trasparenza / Guarantees Section -->
		<section id={locale === 'it' ? 'garanzie' : 'guarantees'} class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.garanzie.title}</h2>
						<p class="text-lg text-gray-600 mb-6">{content.garanzie.description}</p>
						<div class="space-y-3 text-gray-700">
							{content.garanzie.points.map((point: string) => (
								<p class="flex items-start">
									<span class="text-[#8BC34A] mr-3 text-xl">â€¢</span>
									<span>{point}</span>
								</p>
							))}
						</div>
					</div>
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/ChatGPT Image Dec 2, 2025, 10_50_18 AM.png" alt="Guarantees" class="w-full h-full object-cover" />
					</div>
				</div>
			</div>
		</section>

		<!-- SostenibilitÃ  / Sustainability Section -->
		<section id={locale === 'it' ? 'sostenibilita' : 'sustainability'} class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div class="relative h-[400px] rounded-lg overflow-hidden shadow-2xl">
						<img src="/img/Borryssss.jpeg" alt="Sustainability" class="w-full h-full object-cover" />
					</div>
					<div>
						<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
						<h2 class="text-4xl font-bold mb-6">{content.sostenibilita.title}</h2>
						<p class="text-lg text-gray-600">{content.sostenibilita.description}</p>
					</div>
				</div>
			</div>
		</section>

		<!-- News Section -->
		<section id="news" class="py-20 bg-gradient-to-br from-gray-900 to-gray-800 text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
					<h2 class="text-4xl font-bold mb-4">{content.news.title}</h2>
					<p class="text-xl text-gray-300">{content.news.subtitle}</p>
				</div>
				<div class="grid md:grid-cols-3 gap-8">
					{content.news.items.map((item: any) => (
						<div class="bg-white/5 p-8 rounded-lg backdrop-blur-sm">
							<div class="text-[#8BC34A] font-semibold mb-3">{item.date}</div>
							<h3 class="text-xl font-bold mb-3">{item.title}</h3>
							<p class="text-gray-300">{item.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Partners Section -->
		<section id="partners" class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<div class="inline-block bg-[#8BC34A] w-12 h-1 mb-6"></div>
					<h2 class="text-4xl font-bold mb-4">{content.partners.title}</h2>
					<p class="text-xl text-gray-600 mb-4">{content.partners.subtitle}</p>
					<p class="text-gray-600 max-w-3xl mx-auto">{content.partners.description}</p>
				</div>
				<div class="grid md:grid-cols-3 gap-8">
					{content.partners.categories.map((category: any) => (
						<div class="text-center p-8 bg-gray-50 rounded-lg">
							<div class="w-20 h-20 rounded-full bg-[#8BC34A]/10 flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-[#8BC34A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
								</svg>
							</div>
							<h3 class="text-xl font-bold mb-3">{category.title}</h3>
							<p class="text-gray-600">{category.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Contatti / Contact Section -->
		<section id={locale === 'it' ? 'contatti' : 'contact'} class="py-20 bg-gradient-to-br from-[#8BC34A] to-[#689F38] text-white">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<div class="inline-block bg-white w-12 h-1 mb-6"></div>
				<h2 class="text-4xl font-bold mb-6">{content.contatti.title}</h2>
				<p class="text-xl mb-12">{content.contatti.subtitle}</p>
				<div class="bg-white/10 backdrop-blur-sm p-8 rounded-lg">
					<form class="space-y-6">
						<div class="grid md:grid-cols-2 gap-6">
							<input type="text" placeholder={content.contatti.form.name} class="w-full px-4 py-3 rounded bg-white/20 border border-white/30 placeholder-white/70 text-white focus:outline-none focus:ring-2 focus:ring-white/50" />
							<input type="email" placeholder={content.contatti.form.email} class="w-full px-4 py-3 rounded bg-white/20 border border-white/30 placeholder-white/70 text-white focus:outline-none focus:ring-2 focus:ring-white/50" />
						</div>
						<input type="text" placeholder={content.contatti.form.subject} class="w-full px-4 py-3 rounded bg-white/20 border border-white/30 placeholder-white/70 text-white focus:outline-none focus:ring-2 focus:ring-white/50" />
						<textarea rows="5" placeholder={content.contatti.form.message} class="w-full px-4 py-3 rounded bg-white/20 border border-white/30 placeholder-white/70 text-white focus:outline-none focus:ring-2 focus:ring-white/50"></textarea>
						<button type="submit" class="w-full md:w-auto px-12 py-4 bg-white text-[#8BC34A] font-bold rounded hover:bg-gray-100 transition-colors">
							{content.contatti.form.submit}
						</button>
					</form>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-[#2E2E2E] text-white py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Multi-column grid -->
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
					<!-- Column 1: Company Branding -->
					<div class="text-center md:text-left">
						<h3 class="text-2xl md:text-3xl font-bold mb-2">
							<span class="text-white">TIESSE</span><span class="text-[#8BC34A]">SERVIZI</span>
						</h3>
						<p class="text-gray-400 text-sm">FACILITY â€¢ EXECUTIVE MANAGEMENT</p>
					</div>

					<!-- Column 2: Company Info -->
					<div class="text-center md:text-left">
						<h4 class="text-lg font-semibold mb-3">{content.footer.company_info_title}</h4>
						<div class="space-y-2 text-sm">
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.partita_iva_label}:</span><br/>
								{content.footer.partita_iva_value}
							</p>
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.sede_label}:</span><br/>
								{content.footer.sede_value}
							</p>
						</div>
					</div>

					<!-- Column 3: Contacts -->
					<div class="text-center md:text-left">
						<h4 class="text-lg font-semibold mb-3">{content.footer.contacts_title}</h4>
						<div class="space-y-2 text-sm">
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.email_label}:</span><br/>
								<a href={`mailto:${content.footer.email_value}`} class="hover:text-[#8BC34A] transition-colors">
									{content.footer.email_value}
								</a>
							</p>
							<p class="text-gray-400">
								<span class="font-medium text-white">{content.footer.pec_label}:</span><br/>
								<a href={`mailto:${content.footer.pec_value}`} class="hover:text-[#8BC34A] transition-colors">
									{content.footer.pec_value}
								</a>
							</p>
						</div>
					</div>
				</div>

				<!-- Copyright row -->
				<div class="border-t border-gray-700 pt-6 text-center">
					<p class="text-sm text-gray-500">
						&copy; 2024 TIESSE SERVIZI. {content.footer.copyright}
					</p>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			const menuIcon = document.getElementById('menu-icon');
			const closeIcon = document.getElementById('close-icon');
			const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

			mobileMenuButton?.addEventListener('click', () => {
				const isOpen = !mobileMenu?.classList.contains('translate-x-full');

				if (isOpen) {
					// Close menu
					mobileMenu?.classList.add('translate-x-full');
					menuIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					document.body.style.overflow = '';
				} else {
					// Open menu
					mobileMenu?.classList.remove('translate-x-full');
					menuIcon?.classList.add('hidden');
					closeIcon?.classList.remove('hidden');
					document.body.style.overflow = 'hidden';
				}
			});

			// Close mobile menu when clicking on a link
			mobileMenuLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu?.classList.add('translate-x-full');
					menuIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					document.body.style.overflow = '';
				});
			});
		</script>
